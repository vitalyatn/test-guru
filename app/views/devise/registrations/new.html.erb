<h2><%= t('.become') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, t('.first_name') %><br />
    <%= f.text_field :first_name,  autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_name, t('.last_name') %><br />
    <%= f.text_field :last_name,  autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :email, t('.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t('.characters_minimum') %> )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div id="password_confirm" class="field">
    <%= f.label :password_confirmation, t('.password_confirmation')%>
    <div id="message" data-toggle="tooltip" data-placement="top" title=" ">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <%= octicon 'info', class: 'hide', height: '24', :"aria-label" => "Help text" %><br />
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
